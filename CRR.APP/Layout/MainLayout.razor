@inherits LayoutComponentBase
@inject GPSService _GPS
 
<RadzenComponents />
<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>

<RadzenLayout style="position: relative">
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="Header" />
            @if(_GPS.IsRunning)
            {
                <RadzenIcon Icon="hourglass" />
            }
            else if(_GPS.Latitude == null || _GPS.Longitude == null)
            {
                <RadzenIcon Icon="wrong_location" />
            }
            else
            {
                <RadzenIcon Icon="location_on" />
            }
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Responsive="false" @bind-Expanded="@sidebarExpanded" style="position: absolute">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" Click=@(() => sidebarExpanded = false) />
            <RadzenPanelMenuItem Text="Adressen" Icon="home_work" Path="addresses" Click=@(() => sidebarExpanded = false) />
            <RadzenPanelMenuItem Text="Auto's" Icon="traffic_jam" Path="cars" Click=@(() => sidebarExpanded = false) />
            <RadzenPanelMenuItem Text="Ritten lijst" Icon="route" Path="TripList" Click=@(() => sidebarExpanded = false) />
            <RadzenPanelMenuItem Text="Standaard ritten" Icon="hallway" Path="DefaultTripList" Click=@(() => sidebarExpanded = false) />
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-0 rz-p-sm-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        CRR by Chunkk
    </RadzenFooter>
</RadzenLayout>

@code {
    bool sidebarExpanded = false;

    protected override async Task OnInitializedAsync(){
        _GPS.OnGPSUpdate += StateHasChanged;
        await base.OnInitializedAsync();
    }
}