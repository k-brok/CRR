@page "/"
@inject DialogService DialogService
@inject GPSService _GPS

<PageTitle>Home</PageTitle>

<RadzenStack Gap="1rem" Style="position: relative">
    <RadzenRow>
        <RadzenColumn Size="6">
            <RadzenCard>
                <RadzenButton Click=@(args => OpenNewTrip()) Text="Nieuwe rit toevoegen" ButtonStyle="ButtonStyle.Primary" />
            </RadzenCard>
        </RadzenColumn>
        <RadzenColumn Size="6">
            <CRR.APP.Components.YearOverview />
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>

@code{
    
    async Task OpenNewTrip()
    {
         await DialogService.OpenAsync<CRR.APP.Dialog.TripDialog>($"Nieuwe Rit",
               new Dictionary<string, object>(),
               new DialogOptions());
    }
}