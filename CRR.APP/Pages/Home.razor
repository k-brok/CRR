@page "/"

<PageTitle>Home</PageTitle>

<RadzenStack Gap="1rem" Style="position: relative">
    <RadzenRow>
        <RadzenColumn Size="4">
            <RadzenCard Variant="Variant.Outlined" Style="height: 100%;">
                <RadzenStack JustifyContent="JustifyContent.SpaceBetween" Style="height: 100%;" >
                    <RadzenButton Click=@(args => OpenNewTrip()) Text="Aankomst toevoegen" ButtonStyle="ButtonStyle.Primary" />
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>

@code{
    async Task OpenNewTrip()
    {
         await DialogService.OpenAsync<CRR.APP.Dialog.AddressDialog>($"Address {AddressData.Name}",
               new Dictionary<string, object>() { { "AddressData", AddressData } },
               new DialogOptions() { Width = "700px", Height = "520px" });
    }
}