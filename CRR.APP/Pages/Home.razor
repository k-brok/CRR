@page "/"

<PageTitle>Home</PageTitle>

<RadzenStack Gap="1rem" Style="position: relative">
    <RadzenRow>
        <RadzenColumn Size="6">
            <RadzenButton Click=@(args => OpenNewTrip()) Text="Aankomst toevoegen" ButtonStyle="ButtonStyle.Primary" />
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>

@code{
    async Task OpenNewTrip()
    {
         await DialogService.OpenAsync<CRR.APP.Dialog.TripDialog>($"Nieuwe Rit",
               new Dictionary<string, object>(),
               new DialogOptions());
    }
}